DROP TABLE IF EXISTS pessoa;
DROP TABLE IF EXISTS telefone;
DROP TABLE IF EXISTS documento;
DROP TABLE IF EXISTS documento_operadora;
DROP TABLE IF EXISTS operadora;

CREATE TABLE documento
(
id SERIAL NOT NULL,
numero varchar(25) NOT NULL,
tipo INT,
CONSTRAINT pk_documento PRIMARY KEY (id)
);

CREATE TABLE pessoa
(
id SERIAL NOT NULL,
id_documento INTEGER NOT NULL,
nome varchar(255) NOT NULL,
nascimento varchar(11) NOT NULL,
CONSTRAINT pk_pessoa PRIMARY KEY (id),
CONSTRAINT fk_pessoa_documento FOREIGN KEY (id_documento) REFERENCES documento(id)
);

CREATE TABLE operadora
(
id SERIAL NOT NULL,
razaoSocial varchar(50) NOT NULL,
CONSTRAINT pk_operadora PRIMARY KEY (id)
);

CREATE TABLE documento_operadora
(
id SERIAL NOT NULL,
id_documento INTEGER NOT NULL,
id_operadora INTEGER NOT NULL,
CONSTRAINT pk_documento_operadora PRIMARY KEY (id),
CONSTRAINT fk_documento_operadora_documento FOREIGN KEY (id_documento) REFERENCES documento(id) ON DELETE RESTRICT,
CONSTRAINT fk_documento_operadora_operadora FOREIGN KEY (id_operadora) REFERENCES operadora(id) ON DELETE RESTRICT
);

CREATE TABLE telefone
(
id SERIAL NOT NULL,
id_pessoa INTEGER NOT NULL,
id_operadora INTEGER NOT NULL,
numero varchar(11) NOT NULL,
CONSTRAINT pk_telefone PRIMARY KEY (id),
CONSTRAINT fk_telefone_pessoa FOREIGN KEY (id_pessoa) REFERENCES pessoa(id) ON DELETE RESTRICT,
CONSTRAINT fk_telefone_operadora FOREIGN KEY (id_operadora) REFERENCES operadora(id) ON DELETE RESTRICT
);